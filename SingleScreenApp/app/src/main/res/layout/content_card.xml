<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    app:cardCornerRadius="6dp"
    android:elevation="6dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/amita"
            android:padding="14dp"
            android:text="@string/text_desc"
            android:textColor="@color/dark_purple"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:layout_centerVertical="true"
            android:id="@+id/icon_call"
            android:src="@drawable/ic_call_black_24dp"
            android:layout_below="@+id/text_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginStart="4dp"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/icon_call"
            android:textColor="@color/dark_purple"
            android:layout_below="@id/text_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+91 807578176" />

        <ImageView
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:layout_centerVertical="true"
            android:id="@+id/icon_mail"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_mail_black_24dp"
            android:layout_below="@+id/icon_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginStart="4dp"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/icon_mail"
            android:textColor="@color/dark_purple"
            android:layout_below="@id/icon_call"
            android:layout_width="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_height="wrap_content"
            android:text="support@lavish.com" />

    </RelativeLayout>



</android.support.v7.widget.CardView>